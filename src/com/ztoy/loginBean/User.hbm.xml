<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.ztoy.loginBean.User" table="user" schema="3720user">
        <id name="id">
            <column name="id" sql-type="int(10) unsigned"/>
            <generator class="native"/>
        </id>
        <property name="userName">
            <column name="user_name" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(30)" length="30"/>
        </property>
    </class>
</hibernate-mapping>